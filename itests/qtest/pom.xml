  <profiles>
    <profile>
      <!-- replaces -Dclustermode=minimr which I am sure sure was used? -->
      <id>minimr</id>
      <properties>
        <test.warehouse.scheme/>
      </properties>
    </profile>
    <profile>
      <id>qsplits</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-split-tests</id>
                <phase>generate-sources</phase>
                <configuration>
                  <target>
                    <exec executable="bash" failonerror="true">
                      <arg value="${basedir}/../bin/generate-cli-splits.sh"/>
                      <arg value="src/test/java"/>
                      <arg value="target/generated-test-sources"/>
                    </exec>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>add-test-source</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>add-test-source</goal>
                </goals>
                <configuration>
                  <sources>
                    <source>target/generated-test-sources</source>
                  </sources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>1.0-alpha-2</version>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>read-project-properties</goal>
            </goals>
            <configuration>
